<%- include ('partials/userheader.ejs');-%>
    <div class="container">
        <% if (message != '') { %>
            <p class="text-center text-danger"><%= message %></p>
        <% } %>
        <form class="add-user-form" action="" method="POST" >
            <div class="form-row">
                <div class="form-group col-md-4">
                    <input type="text" name="username" id="username" placeholder="Username" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="attribute" id="attribute" placeholder="Password Type" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="value" id="value" placeholder="Password" required>
                </div>
            </div>
            <button type="submit" class="btn btn-primary float-right">Add User</button>
        </form>
    </div>
</div>
</body>
</html>
