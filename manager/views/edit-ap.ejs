<%- include ('partials/apheader.ejs') -%>
<div class="container">
    <% if (message) { %>
        <p class="text-center text-danger"><%= message %></p>
    <% } %>

    <% if (ap) { %>
        <form class="add-ap-form" action="" method="post" >
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="ipaddress">AP IP Address</label>
                    <input type="text" class="form-control" name="ipaddress" id="ipaddress" value="<%= ap.nasname %>" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="passtype">AP Name</label>
                    <input type="text" class="form-control" name="apname" id="apname" value="<%= ap.shortname %>" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="password">Ports</label>
                    <input type="text" class="form-control" name="ports" id="ports" value="<%= ap.ports %>">
                </div>
                <div class="form-group col-md-4">
                    <label for="password">Secret</label>
                    <input type="text" class="form-control" name="secret" id="secret" value="<%= ap.secret %>" required>
                </div>

            </div>
            <button type="submit" class="btn btn-success float-right">Update AP</button>
        </form>
    <% } else { %>
        <p class="text-center">AP Not Found. Go <a href="/ap/add">here</a> to add APs.</p>
    <% } %>
</div>
</div>
</body>
</html>
