<%- include ('partials/userheader.ejs');-%>
    <div class="table-wrapper">
        <% if (users.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
			<th scope="col">ID</th>
                        <th scope="col">Username</th>
                        <th scope="col">Password Type</th>
                        <th scope="col">Password</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach((user, index) => { %>
                        <tr>
                            <th scope="row"><%= user.id %></th>
                            <td><%= user.username %></td>
                            <td><%= user.attribute %></td>
                            <td><%= user.value %></td>
                            <td>
                                <a href="/user/edit/<%= user.id %>" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                <a href="/user/delete/<%= user.id %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No users found. Go <a href="/user/add" >here</a> to add users.</p>
        <% } %>
    </div>
</div>
</body>
</html>
